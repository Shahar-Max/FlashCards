<Window x:Class="WpfApp1.CreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="CreationWindow" Height="450" Width="800"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <Grid Margin="50,200,50,50">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox TextAlignment="Center" Grid.Row="0" Name="fcWord"></TextBox>
        <TextBox TextAlignment="Center" Grid.Row="1" Name="fcDef"></TextBox>
        <Button Grid.Row="2" Name="addBtn">Add</Button>
        <Button Name="returnBtn" Margin="-50,-200,650,0" Padding="10" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Viewbox>
                <TextBlock>Return</TextBlock>
            </Viewbox>
        </Button>
    </Grid>
</Window>
